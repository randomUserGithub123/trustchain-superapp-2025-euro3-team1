<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <TextView
        android:id="@+id/user_home_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance: 0"
        android:textSize="20sp"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/bluetooth_withdraw_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Withdraw"/>

    <Button
        android:id="@+id/bluetooth_send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/bluetooth_deposit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deposit"
        android:layout_marginTop="12dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bloom Filter Statistics"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/bloom_filter_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size: 0 bytes"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/bloom_filter_elements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expected Elements: 0"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/bloom_filter_false_positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="False Positive Rate: 0%"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/bloom_filter_current_false_positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current False Positive Rate: 0%"/>

            <TextView
                android:id="@+id/bloom_filter_estimated_elements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimated Elements: 0.00"
                android:layout_marginBottom="4dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/bloom_filter_raw_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Raw Bloom Filter: N/A"
        android:fontFamily="monospace"
        android:scrollbars="vertical"
        android:maxLines="50"
        android:ellipsize="end"
        android:layout_marginBottom="0dp"/>

</LinearLayout>
</ScrollView>
